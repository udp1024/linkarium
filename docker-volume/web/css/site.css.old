#logodiv {
    width: 15vmin;
    max-width: 128px;
    height: 15vmin;
    max-height: 128px;
    }
#logodiv img {
    width: 15vmin;
    max-width: 128px;
    height: 15vmin;
    max-height: 128px;
}

#openweathermap-widget-15 {
    max-width: 300px;
    max-height: 232px;
    height: 15vmin;
    width: 15vmin;
    position: relative;
    float: left;
    margin: 1vmin;
}

.icondiv {
    width: 15vmin;
    max-width: 64px;
    height: 15vmin;
    max-height: 64px;
    }
.icondiv img {
    width: 15vmin;
    max-width: 64px;
    height: 15vmin;
    max-height: 64px;
}
.card {
    box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
    transition: 0.3s;
    width: 60vmin;
    max-width: 300px;
    height: 20vmin;
    max-height: 232px;
    border-radius: 5px;
    margin: auto;
    /*text-align: center;*/
    position: relative;
    cursor: pointer;
    float: left;
    margin-right: 1vmin;
    margin-top: 1vmin;
}
.card:hover {
    box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
    transform: scale(1.05);
}

.container {
    padding: 2px 16px;
}

.icon {
    position: absolute;
    top: 10px;
    left: 10px;
}
#logo {
    position: absolute;
    top: 10px;
    left: 10px;
    width: auto; /* Adjust as needed */
}

/* Title styles */
#title {
    position: absolute;
    top: 10px;
    left: 70px; /* Adjust the left position based on your logo size */
    font-size: 20px;
    font-weight: bold;
}
#image-container {
    width: 100%;
    height: 300px; /* Adjust as needed */
    overflow: hidden;
}
#rotator {
    transition: opacity 1s ease-in-out;
}